<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/homeDateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        tools:text="December 06, 2018"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"
        android:textColor="@color/colorPrimaryDark"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pedestrian_walking"
            android:padding="10dp"
            />
        <Chronometer
            android:id="@+id/simpleChronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/goal_max_display_str"
        android:gravity="center"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="2"
        >
        <TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text = "@string/max_sit_display_str"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:gravity="end"
            />
        <TextView
            android:id="@+id/sitting_max"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="5dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="2"
        >
        <TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text = "@string/max_walk_display_str"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:gravity="end"
            />
        <TextView
            android:id="@+id/walking_max"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="5dp"
            />
    </LinearLayout>

    <!--<TextView
        android:id="@+id/homeScreenTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        />-->

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        >

        <ImageView
            android:id="@+id/waterImg"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/water_glass"
            />

        <LinearLayout
            android:id="@+id/waterTotalContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/water_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Today's Total: 8 ounces (1 cup)"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                >

                <Button
                    android:id="@+id/waterButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/water_add_btn_label"
                    android:textAllCaps="false"
                    android:background="@drawable/button_with_shadow_border"
                    android:textColor="@color/colorAccent"
                    android:padding="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    />

                <Button
                    android:id="@+id/waterButtonSub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/water_sub_btn_label"
                    android:textAllCaps="false"
                    android:background="@drawable/button_with_shadow_border"
                    android:textColor="@color/colorAccent"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>